<Window x:Class="TimerAlertApp.AlertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="アラート" Height="150" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock x:Name="txtMessage" Text="指定時間が経過しました！" TextWrapping="Wrap" Margin="5" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnContinue" Content="継続" Width="90" Margin="5" Click="btnContinue_Click"/>
            <Button x:Name="btnStop" Content="停止" Width="90" Margin="5" Click="btnStop_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
